<Window x:Class="Linear_Gradient_Color.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tô theo hướng tuyến tính" Height="252" Width="379">
    <Canvas Height="346" Width="451">
        <Rectangle Canvas.Left="72" Canvas.Top="49" Height="100" Stroke="Black" Width="200" >
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,.75">
                    <GradientStop Color="Yellow" Offset="0.0" />
                    <GradientStop Color="Red" Offset="0.25" />
                    <GradientStop Color="Blue" Offset="0.75" />
                    <GradientStop Color="LimeGreen" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <!-- This rectangle is painted with a diagonal linear gradient. -->
    </Canvas>
</Window>
